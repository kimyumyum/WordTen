<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_asdfasdfasf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kim.wordten.Test2"
    android:weightSum="1">

    <TextView
        android:text="단어의 뜻이 맞으면 O, 틀리면 X를 누르세요."
        android:gravity="center"
        android:layout_width="319dp"
        android:layout_height="15dp"
        android:id="@+id/tvInstr"
        />

    <TextView
        android:text="TextView"
        android:layout_marginTop="40dp"
        android:id="@+id/tvExam"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.22">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="15dp"

            android:id="@+id/tvSpell"
             />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/tvPron" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="0.06">

        <TextView
        android:text="뜻: "
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:id="@+id/textView9"
           />

        <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
            android:gravity="center"

        android:id="@+id/tvMeaning"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_weight="0.29">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="103dp"
            android:id="@+id/textView11"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_weight="0.24">

        <Button
            android:text="O"

            android:onClick="checkCorrect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:id="@+id/buttonCorrect"


            android:layout_toStartOf="@+id/tvExam"
            android:layout_weight="1" />

        <Button
            android:text="X"
            android:onClick="checkWrong"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/buttonWrong"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
